{
	"$schema": "http://json-schema.org/draft-07/schema",
	"title": "Aidoku source specification",
	"definitions": {
		"language": {
			"type": "object",
			"properties": {
				"code": {
					"type": "string"
				},
				"value": {
					"type": "string"
				},
				"default": {
					"type": "boolean"
				}
			},
			"required": [
				"code"
			]
		},
		"sourceInfo": {
			"type": "object",
			"properties": {
				"id": {
					"type": "string"
				},
				"lang": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"version": {
					"type": "integer",
					"minimum": 1
				},
				"url": {
					"type": "string"
				},
				"urls": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"nsfw": {
					"type": "integer",
					"minimum": 0,
					"maximum": 2
				},
				"minAppVersion": {
					"type": "string",
					"pattern": "\\d+\\.\\d+"
				},
				"maxAppVersion": {
					"type": "string",
					"pattern": "\\d+\\.\\d+"
				}
			},
			"required": [
				"id",
				"lang",
				"name",
				"version"
			]
		},
		"listing": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"flags": {
					"description": "Currently unused",
					"type": "integer"
				}
			},
			"required": [
				"name"
			]
		}
	},
	"type": "object",
	"properties": {
		"info": {
			"$ref": "#/definitions/sourceInfo"
		},
		"languages": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/language"
			}
		},
		"listings": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/listing"
			}
		},
		"languageSelectType": {
			"type": "string",
			"enum": [
				"single",
				"multi"
			],
			"description": "Accepts any value, but only \"single\" has meaning"
		}
	},
	"required": [
		"info"
	]
}
